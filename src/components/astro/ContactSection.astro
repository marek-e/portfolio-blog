---
import { Link } from '@/components/ui/button';
import { HugeiconsIcon } from '@hugeicons/react';
import {
  Mail01Icon,
  Github01Icon,
  Linkedin01Icon,
  NewTwitterIcon,
} from '@hugeicons/core-free-icons';

const email = 'hello@melmayan.fr';
const socials = [
  { name: 'GitHub', href: 'https://github.com/melmayan', icon: Github01Icon },
  { name: 'LinkedIn', href: 'https://linkedin.com/in/melmayan', icon: Linkedin01Icon },
  { name: 'X', href: 'https://x.com/melmayan', icon: NewTwitterIcon },
];
---

<section id="contact" class="relative py-20 md:py-32">
  <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
    <h2 class="text-foreground mb-4 text-3xl font-bold tracking-tight md:text-4xl">Get in Touch</h2>
    <p class="text-muted-foreground mx-auto mb-8 max-w-lg text-lg">
      Have a project in mind or just want to say hi? I'd love to hear from you.
    </p>

    <div class="mb-12">
      <Link size="lg" className="gap-2" href={`mailto:${email}`}>
        <HugeiconsIcon icon={Mail01Icon} className="size-5" data-icon="inline-start" />
        {email}
      </Link>
    </div>

    <div class="flex items-center justify-center gap-4">
      {
        socials.map((social) => (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Follow on ${social.name}`}
            class="text-muted-foreground hover:text-foreground hover:bg-muted rounded-full p-3 transition-colors"
          >
            <HugeiconsIcon icon={social.icon} className="size-6" />
          </a>
        ))
      }
    </div>

    <p class="text-muted-foreground mt-12 text-sm">
      Currently available for freelance projects and collaborations.
    </p>
  </div>
</section>
