---
import { getTranslations, getLangFromUrl } from '@/i18n';
import { DevIdCard } from '@/components/react/DevIdCard';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<section
  id="about"
  class="container mx-auto flex flex-col gap-12 px-4 py-20 sm:px-6 md:py-32 lg:px-8"
>
  <h2 class="text-foreground text-3xl font-bold tracking-tight md:text-4xl">
    {t.about.title}
  </h2>
  <DevIdCard client:visible lang={lang} />
  <div class="text-foreground/80 space-y-6 text-lg leading-relaxed">
    {t.about.paragraphs.map((paragraph) => <p>{paragraph}</p>)}
  </div>
</section>
