---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/astro/Navbar.astro';
import BackgroundImage from '@/components/astro/BackgroundImage.astro';
import { Link } from '@/components/ui/button';
import { Icon } from '@/components/react/Icon';
import { Home } from '@hugeicons/core-free-icons';
import { getLangFromUrl, getTranslatedPath, getTranslations } from '@/i18n';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const translatePath = getTranslatedPath(lang);
---

<Layout title={t.notFound.pageTitle} description={t.notFound.pageDescription}>
  <Navbar />
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden">
    <BackgroundImage />

    <div class="relative z-10 mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
      <span class="text-primary/70 mb-4 block text-[12rem] leading-none font-black sm:text-[16rem]">
        404
      </span>
      <h1 class="text-foreground -mt-16 mb-4 text-3xl font-bold sm:-mt-20 sm:text-4xl lg:text-5xl">
        {t.notFound.heading}
      </h1>
      <p class="text-foreground/80 mx-auto mb-8 max-w-md text-lg">
        {t.notFound.message}
      </p>
      <Link href={translatePath('/')} size="lg" className="px-8 py-6 text-base font-medium">
        <Icon icon={Home} strokeWidth={3} className="size-4" />
        {t.notFound.backHome}
      </Link>
    </div>
  </section>
</Layout>
