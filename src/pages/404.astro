---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/astro/Navbar.astro';
import { Link } from '@/components/ui/button';
import { Icon } from '@/components/react/Icon';
import { Home } from '@hugeicons/core-free-icons';
---

<Layout
  title="404 - Page Not Found | melmayan.fr"
  description="The page you're looking for doesn't exist"
>
  <Navbar />
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden">
    <div
      class="from-primary/20 via-secondary/10 to-primary/20 dark:from-primary/30 dark:via-secondary/20 dark:to-primary/30 absolute inset-0 -z-10 bg-linear-to-br"
    >
    </div>
    <div class="relative z-10 mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
      <span
        class="text-primary/20 dark:text-primary/30 mb-4 block text-[12rem] leading-none font-black sm:text-[16rem]"
      >
        404
      </span>
      <h1 class="text-foreground -mt-16 mb-4 text-3xl font-bold sm:-mt-20 sm:text-4xl lg:text-5xl">
        Page not found
      </h1>
      <p class="text-muted-foreground mx-auto mb-8 max-w-md text-lg">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <Link href="/" size="lg" className="px-8 py-6 text-base font-medium">
        <Icon icon={Home} strokeWidth={3} className="size-4" /> Back to Home
      </Link>
    </div>
  </section>
</Layout>
