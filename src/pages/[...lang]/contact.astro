---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/astro/Navbar.astro';
import Footer from '@/components/astro/Footer.astro';
import { getTranslations, defaultLang } from '@/i18n';
import ContactSection from '@/components/astro/ContactSection.astro';

export function getStaticPaths() {
  return [{ params: { lang: undefined } }, { params: { lang: 'en' } as const }];
}

const lang = Astro.params.lang ?? defaultLang;
const t = getTranslations(lang);
---

<Layout title={t.contactPage.pageTitle} description={t.contactPage.pageDescription}>
  <script is:inline slot="head" type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "name": "Me contacter - Marek Elmayan",
      "url": "https://melmayan.fr/contact",
      "description": "Contactez Marek Elmayan pour discuter de vos projets ou opportunit√©s.",
      "mainEntity": {
        "@type": "Person",
        "name": "Marek Elmayan",
        "email": "melmayan.dev@gmail.com"
      }
    }
  </script>
  <Navbar />
  <main class="bg-background min-h-dvh py-16 md:py-24">
    <ContactSection />
  </main>
  <Footer />
</Layout>
