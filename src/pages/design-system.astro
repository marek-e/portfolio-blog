---
import Layout from "@/layouts/Layout.astro";
import { DesignSystemPreview } from "@/components/react/DesignSystemPreview";
---

<Layout title="Design System | melmayan.fr" description="Component library and design tokens preview">
  <main class="container mx-auto max-w-5xl px-4 py-12">
    <header class="mb-12 space-y-4">
      <h1 class="text-4xl font-bold tracking-tight">Design System</h1>
      <p class="text-lg text-muted-foreground">
        A preview of all available components and design tokens.
      </p>
    </header>

    <DesignSystemPreview client:load />
  </main>
</Layout>
