---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import { getAlternatePath, getLangFromUrl } from '@/i18n/config';
import { BookmarkLanguageToggle } from '@/components/react/BookmarkLanguageToggle';
import { ToastProvider } from '@/components/react/ToastProvider';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = 'Developer portfolio and blog',
  image = '/og-image.png',
} = Astro.props;

const lang = getLangFromUrl(Astro.url);

const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site);

// Generate alternate URLs for hreflang tags
const frPath = getAlternatePath(currentPath, lang, 'fr');
const enPath = getAlternatePath(currentPath, lang, 'en');
const frURL = new URL(frPath, Astro.site);
const enURL = new URL(enPath, Astro.site);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Alternate language links for SEO -->
    <link rel="alternate" hreflang="fr" href={frURL} />
    <link rel="alternate" hreflang="en" href={enURL} />
    <link rel="alternate" hreflang="x-default" href={frURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <meta name="color-scheme" content="light dark" />

    <ClientRouter />
    <script is:inline>
      function applyStoredTheme() {
        const theme = localStorage.getItem('theme') || 'system';
        const isDark =
          theme === 'dark' ||
          (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches);
        document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
      }

      // Apply theme immediately on page load
      applyStoredTheme();

      // Reapply theme after View Transitions navigation
      document.addEventListener('astro:after-swap', applyStoredTheme);
    </script>
  </head>
  <body class="bg-background text-foreground min-h-dvh antialiased">
    <BookmarkLanguageToggle client:load currentLang={lang} currentPath={currentPath} />
    <slot />
    <ToastProvider client:load />
  </body>
</html>
